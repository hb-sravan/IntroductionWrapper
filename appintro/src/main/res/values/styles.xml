<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppStyle" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="IntroductionButtonStyleCompat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:minHeight">@dimen/button_minheight</item>
        <item name="android:minWidth">@dimen/button_minwidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="Introduction2ButtonStyleCompat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/ic_appintro_ripple</item>
        <item name="android:layout_height">@dimen/introduction2_fab_size</item>
        <item name="android:layout_width">@dimen/introduction2_fab_size</item>
        <item name="android:layout_margin">@dimen/introduction2_fab_margin</item>
    </style>

    <style name="IndicatorContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/indicator_margin</item>
    </style>

    <style name="IntroductionDefaultHeading" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/introduction_title_color</item>
        <item name="android:textSize">@dimen/headtext_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/head_padding</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>

    <style name="IntroductionDefaultText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/introduction_desc_color</item>
        <item name="android:textSize">@dimen/desctext_size</item>
        <item name="android:padding">@dimen/desc_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IntroductionDefaultImage">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>
